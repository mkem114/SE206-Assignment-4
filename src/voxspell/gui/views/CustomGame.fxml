<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" stylesheets="@protoTheme.css"
            xmlns="http://javafx.com/javafx/8.0.65" fx:controller="voxspell.gui.controllers.CustomGameController">
   <children>
       <GridPane alignment="CENTER" layoutX="1.0" layoutY="14.0" prefHeight="47.0" prefWidth="600.0"
                 AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="50.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="370.0" minWidth="10.0" prefWidth="346.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="299.0" minWidth="10.0" prefWidth="90.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="318.0" minWidth="10.0" prefWidth="71.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="85.0" minWidth="10.0" prefWidth="80.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="23.0" minHeight="0.0" prefHeight="13.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="24.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label styleClass="ui-status-text-small" text="LEVEL">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label styleClass="ui-status-text-small" text="PROGRESS" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label styleClass="ui-status-text-small" text="CORRECT" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label styleClass="ui-status-text-small" text="ALL-TIME" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="currentLevelLabel" styleClass="ui-status-text-large" text="2" GridPane.rowIndex="1">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label fx:id="currentProgressLabel" styleClass="ui-status-text-large" text="4/10" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label fx:id="correctPercentageLabel" styleClass="ui-status-text-large" text="50%" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label fx:id="allTimeCorrectPercentageLabel" styleClass="ui-status-text-large" text="72%" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
      <TextField fx:id="attemptInput" layoutX="100.0" layoutY="153.0" onAction="#onSubmit" promptText="Type what you hear..." AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Label layoutX="100.0" layoutY="126.0" style="-fx-font-size: 18;" text="Type what you hear:" AnchorPane.leftAnchor="100.0">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Label>
      <Button fx:id="replayBtn" layoutX="100.0" layoutY="200.0" mnemonicParsing="false" onAction="#requestReplay" prefHeight="24.0" prefWidth="89.0" styleClass="menu-button" text="Replay" AnchorPane.leftAnchor="100.0" />
      <Button fx:id="submitBtn" defaultButton="true" layoutX="448.0" layoutY="200.0" mnemonicParsing="false" onAction="#onSubmit" prefHeight="25.0" prefWidth="300.0" text="Check" AnchorPane.rightAnchor="100.0">
         <styleClass>
            <String fx:value="menu-button" />
            <String fx:value="gameplay-menu-button" />
         </styleClass></Button>
   </children>
</AnchorPane>
